<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGrey1"
    tools:context=".Activities.FullscreenActivity"
    android:orientation="vertical"
    android:weightSum="5"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/first_line_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/colorGrey1"
        android:orientation="horizontal"
        android:weightSum="3">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/temperature_sauna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <in.unicodelabs.kdgaugeview.KdGaugeView
                    android:id="@+id/speedMeter"
                    android:layout_width="253dp"
                    android:layout_height="243dp"
                    android:layout_gravity="center"
                    app:dialSpeedAlertColor="@color/colorRed1"
                    app:dialSpeedColor="@color/colorGreen1"
                    app:maxSpeed="220"
                    app:speedDialRingInnerPadding="15dp"
                    app:speedDialRingWidth="20dp"
                    app:speed_limit="220"
                    app:unitOfMeasurement="째C"
                    app:unitOfMeasurementTextSize="40dp" />

                <TextView
                    android:id="@+id/temperature_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="46째C"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="70sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/date_sauna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:40"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="150sp" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wednesday 15 November"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/moisture_sauna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/moisture_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/drop" />

                <TextView
                    android:id="@+id/moisture_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15,7%"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="70sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_second_container"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="2"
        android:layout_margin="15dp"
        card_view:cardPreventCornerOverlap="false"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/second_line_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <LinearLayout
                android:id="@+id/low_temp_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Low temp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/low_temp_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bench 1 - 26째C"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/high_temp_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="High temp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/high_temp_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bench 2 - 66째C"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/show_sauna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitCenter"
                    android:src="@drawable/eye" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_third_container"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="2"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/third_line_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:weightSum="3"
>

            <Button
                android:id="@+id/get_in_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGreen1"
                android:text="GET IN"
                android:textColor="@color/white"
                android:textSize="55sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8/10"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="70sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/people"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/get_out_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorRed1"
                android:text="GET OUT"
                android:textColor="@color/white"
                android:textSize="55sp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>